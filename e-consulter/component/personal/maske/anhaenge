<%perl>
  $sth = $dbh->prepare("
    select anh_id, anh_beschreibung, anh_filename, anh_ins_time
      from anhaenge
     where anh_uid=(select ben_uid from benutzer where ben_sessid=?)");

  $sth->execute($sessid);
  $res = $sth->fetchall_arrayref();
</%perl>
