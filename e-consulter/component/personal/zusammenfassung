%#    }
     </td>
    </tr>

    <tr>
     <th class="label">
      Abschlu&szlig;
     </th>
     <td colspan="2">
      <%$aus_abschluss%>
     </td>
    </tr>

%   } # foreach (@$aus)
   </table>
  </td>
 </tr>

 <tr>
  <th class="label">
   Qualifikation
  </th>
