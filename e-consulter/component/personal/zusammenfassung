          <%$ben_plz ." ". $ben_ort%><br><br>
      	</td>
      </tr>
%   $m->print("<tr><td><b><i18n>Telefon</i18n></b></td><td>$ben_telefon</td></tr>") if $ben_telefon;
%   $m->print("<tr><td><b><i18n>Telefax</i18n></b></td><td>$ben_telefax</td></tr>") if $ben_telefax;
