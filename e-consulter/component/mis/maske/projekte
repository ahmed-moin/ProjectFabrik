<%perl>

  my $prj = $dbh->selectall_arrayref ( "
   select prj_id, prj_titel, prj_status
     from projekt, rolle
    where prj_status >= 4
      and prj_id = rol_pid
      and rol_uid = '$uid'
      and (rol_kunde or rol_admin)" );

</%perl>

