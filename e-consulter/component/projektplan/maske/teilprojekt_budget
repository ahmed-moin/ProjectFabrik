   <%$tpr_titel%>
  </td>
  <td align='right'>
   <%formatnumber($bud_personentage, 0, $ARGS{lang})%>
  </td>
  <td align='right'>
   <%formatnumber($bud_betrag, 2, $ARGS{lang})%>
  </td>
  <td align='right'>
   <%formatnumber($bud_sachkosten, 2, $ARGS{lang})%>
  </td>
