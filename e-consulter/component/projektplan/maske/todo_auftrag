<%args>
$dbh
$projektid
$projektplan
$tid => undef
$aid => undef
</%args>
<%perl>

  my $auf = $dbh->selectall_arrayref( "
    select tpr_tid, tpr_titel,
           auf_aid, auf_name,
           apl_startdatum, apl_endedatum
      from aufgabenplan
       join aufgabe
         on auf_pid = apl_pid
        and auf_tid = apl_tid
        and auf_aid = apl_aid
       join teilprojekt
         on tpr_pid = apl_pid
        and tpr_tid = apl_tid
     where apl_pid        = $projektid
       and apl_ppl        = $projektplan
       and not exists (
         select 1
           from auftrag
          where atr_pid = apl_pid
            and atr_tid = apl_tid
            and atr_aid = apl_aid)" );

  my $auf2 = $dbh->selectall_arrayref( "
   select atr_nummer, atr_uid,
          tpr_tid, tpr_titel,
          auf_aid, auf_name,
          apl_startdatum, apl_endedatum
      from aufgabenplan
       join aufgabe
         on auf_pid = apl_pid
        and auf_tid = apl_tid
        and auf_aid = apl_aid
       join teilprojekt
         on tpr_pid = apl_pid
        and tpr_tid = apl_tid
       join auftrag
         on atr_pid = apl_pid
        and atr_tid = apl_tid
        and atr_aid = apl_aid
     where apl_pid        = $projektid
       and apl_ppl        = $projektplan
       and atr_freigabe is null" );

</%perl>
<%cleanup>

  $ARGS{tid} = undef;
  $ARGS{aid} = undef;
  return \%ARGS;

</%cleanup>

