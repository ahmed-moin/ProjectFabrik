<%args>
$dbh
$projektid
$projektplan
$tid => undef
$aid => undef
</%args>
<%perl>

  use Contavia::Date;

  my $pgcurrent = Contavia::Date::current->qpgdate;

  # Startzeitpunkte überprüfen

  # suche alle Aufgaben, die angefangen haben sollten, aber noch
  # keine Tätigkeiten haben.
  my $start = $dbh->selectall_arrayref( "
    select tpr_tid, tpr_titel, auf_aid, auf_name,
           apl_startdatum, apl_endedatum
      from aufgabenplan
       join aufgabe
         on auf_pid = apl_pid
        and auf_tid = apl_tid
        and auf_aid = apl_aid
       join teilprojekt
         on tpr_pid = apl_pid
        and tpr_tid = apl_tid
     where apl_pid        = $projektid
       and apl_ppl        = $projektplan
       and apl_startdatum < $pgcurrent
       and not exists (select 1
           from taetigkeit
            join auftrag
              on atr_nummer = tae_auftrag
          where atr_pid = auf_pid
            and atr_tid = auf_tid
            and atr_aid = auf_aid)
     order by apl_endedatum" );

  # Endezeitpunkte überprüfen
  # Selektiere Aufträge, die fertig sein sollten, aber
  # kein Auftragsbericht existiert, der den Realisierungsgrad 100% hat
  my $ende = $dbh->selectall_arrayref( "
   select atr_nummer, atr_uid,
          tpr_tid, tpr_titel,
          auf_aid, auf_name,
          apl_startdatum, apl_endedatum
     from auftrag
      join aufgabenplan
        on apl_pid = atr_pid
       and apl_tid = atr_tid
       and apl_aid = atr_aid
      join teilprojekt
        on tpr_pid = atr_pid
       and tpr_tid = atr_tid
      join aufgabe
        on auf_pid = atr_pid
       and auf_tid = atr_tid
       and auf_aid = atr_aid
     where apl_pid        = $projektid
       and apl_ppl        = $projektplan
       and apl_endedatum  < $pgcurrent
       and not exists (select 1
          from auftragbericht
           join auftrag
             on atr_nummer = abr_nummer
         where abr_realisierung = 100
           and atr_pid = auf_pid
           and atr_tid = auf_tid
           and atr_aid = auf_aid)
    order by atr_nummer" );

</%perl>
<%cleanup>

  $ARGS{tid} = undef;
  $ARGS{aid} = undef;
  return \%ARGS;

</%cleanup>

