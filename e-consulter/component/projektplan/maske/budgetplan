  </th>
  <td align='right'>
   <%formatnumber($bud_sachkosten, 0, $ARGS{lang})%>
  </td>
  <td align='right'>
   <%formatnumber($bud_sachkosten_ppl, 0, $ARGS{lang})%>
  </td>
  <td align='right'>
   <%formatnumber($bpl_sachkosten, 0, $ARGS{lang})%>
  </td>
  <td align='right'>
