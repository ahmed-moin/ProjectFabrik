   <pre><%formatnumber($bpl{$tpl_tid}, 0, $ARGS{lang})%></pre>
  </td>
  <td align='right'>
   <pre><%formatnumber($bud{$tpl_tid} - $bpl{$tpl_tid}, 0, $ARGS{lang})%></pre>
  </td>
  <td align='right'>
   <pre><%formatnumber($ang{$tpl_tid}, 0, $ARGS{lang})%></pre>
  </td>
 </tr>

% }

