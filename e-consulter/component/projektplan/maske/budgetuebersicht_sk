 <%perl>
  my %sum;

  foreach (@$tpr)
  {

    my ($tpl_tid, $tpr_titel) = @$_;

    $sum{beauftragt} += $bud{$tpl_tid};
    $sum{geplant}    += $bpl{$tpl_tid};
    $sum{angebot}    += $ang{$tpl_tid};

 </%perl>
 <tr>
  <td bgcolor='#cccccc'>
